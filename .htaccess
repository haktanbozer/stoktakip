# ----------------------------------------------------------------------
# 1. TEMEL GÜVENLİK VE GİZLİLİK
# ----------------------------------------------------------------------

# Dizin listelemeyi kapat (Klasör içeriği görünmesin)
Options -Indexes

# Hassas dosyalara erişimi engelle
<FilesMatch "^\.env|^\.git|^\.htaccess|composer\.json|composer\.lock">
    Order allow,deny
    Deny from all
</FilesMatch>

# Log ve Session klasörlerini koru
RewriteEngine On
RewriteRule ^logs/ - [F,L]
RewriteRule ^sessions/ - [F,L]

# ----------------------------------------------------------------------
# 2. HTTP GÜVENLİK BAŞLIKLARI (MOZILLA OBSERVATORY İÇİN KRİTİK)
# ----------------------------------------------------------------------

<IfModule mod_headers.c>
    # 1. HSTS (Strict-Transport-Security)
    # Tarayıcıyı 1 yıl boyunca sadece HTTPS kullanmaya zorlar. (Puanı en çok bu artırır)
    # DİKKAT: Sitenizde SSL (https) kurulu değilse bu satırı silin!
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # 2. X-Content-Type-Options
    # Tarayıcının dosya türlerini tahmin etmesini (MIME-sniffing) engeller.
    Header always set X-Content-Type-Options "nosniff"

    # 3. X-Frame-Options (Clickjacking Koruması)
    # Sitenizin başka sitelerde iframe içinde açılmasını engeller.
    Header always set X-Frame-Options "SAMEORIGIN"

    # 4. Referrer-Policy
    # Başka bir siteye link verildiğinde, tarayıcının ne kadar bilgi göndereceğini belirler.
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # 5. Content-Security-Policy (CSP) - En Güçlü Katman
    # Sitenizin hangi kaynaklardan (resim, script, stil) veri yükleyebileceğini kısıtlar.
    # 'unsafe-inline' kullanımı mecburen açık bırakıldı çünkü satır içi JS/CSS kullanıyoruz.
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://code.jquery.com https://cdn.datatables.net https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdn.datatables.net; img-src 'self' data:; font-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com; frame-ancestors 'self';"

    # 6. Permissions-Policy (Gereksiz donanım erişimlerini kapatır)
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
    
    # 7. Arama Motorlarını Engelle (Yönetim Paneli Olduğu İçin)
    Header set X-Robots-Tag "noindex, nofollow"
</IfModule>

# ----------------------------------------------------------------------
# 3. PERFORMANS OPTİMİZASYONU (Hızlandırma)
# ----------------------------------------------------------------------

# Gzip Sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Tarayıcı Önbellekleme (Browser Caching)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ----------------------------------------------------------------------
# 4. HTTPS YÖNLENDİRMESİ (ZORUNLU)
# ----------------------------------------------------------------------
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>
