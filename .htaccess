# ----------------------------------------------------------------------
# 1. HTTPS YÖNLENDİRMESİ (EN ÜSTTE OLMALI)
# ----------------------------------------------------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Eğer HTTPS değilse, hemen HTTPS'e yönlendir (301 Kalıcı Yönlendirme)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ----------------------------------------------------------------------
# 2. TEMEL GÜVENLİK VE GİZLİLİK
# ----------------------------------------------------------------------

# Dizin listelemeyi kapat (Klasör içeriği görünmesin)
Options -Indexes

# Hassas dosyalara erişimi engelle
<FilesMatch "^\.env|^\.git|^\.htaccess|composer\.json|composer\.lock">
    Order allow,deny
    Deny from all
</FilesMatch>

# Log ve Session klasörlerini koru
RewriteRule ^logs/ - [F,L]
RewriteRule ^sessions/ - [F,L]

# ----------------------------------------------------------------------
# 3. HTTP BAŞLIKLARI (DİĞERLERİ PHP'DEN GÖNDERİLİYOR)
# ----------------------------------------------------------------------

<IfModule mod_headers.c>
    # Not: CSP, HSTS, X-Frame-Options vb. güvenlik başlıkları 
    # artık db.php üzerinden (Nonce desteği için) gönderilmektedir.
    
    # Arama Motorlarını Engelle (Tüm dosyalar için geçerli olsun)
    Header set X-Robots-Tag "noindex, nofollow"
</IfModule>

# ----------------------------------------------------------------------
# 4. PERFORMANS OPTİMİZASYONU
# ----------------------------------------------------------------------

# Gzip Sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/javascript application/json
</IfModule>

# Tarayıcı Önbellekleme
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>
